<%= error_messages_for :chapter %>
<% form_remote_for(:chapter, @chapter, :url => {:action=>:update_chapter_descr, :id=>@chapter.id}, :loading=>"$('loading').show()", :update=>"ch_descr_#{@chapter.id}") do |f| %>
  <%= f.text_area(:descr, :cols=>70, :rows=>10) %><br/>
  <%= submit_tag I18n.t(:send_data) %>
  <div id="loading" class="loading" style="display:none;"><%= I18n.t(:saving) %>...</div>
  <%= f.hidden_field(:script_id, :value=>@script_id) %>
<% end -%>

