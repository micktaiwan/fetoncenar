<%= error_messages_for :para %>
<% form_remote_for(:para, @para, :url => {:action=>:update_para, :id=>@para.id}, :loading=>"$('loading').show()") do |f| %>
  <%= f.text_area(:text, :rows=>8, :cols=>50) %>
  <%= submit_tag I18n.t(:send_data) %>
  <div id="loading" class="loading" style="display:none;"><%= I18n.t(:saving) %>...</div>
<% end -%>

