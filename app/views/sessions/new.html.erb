<h1>Log In</h1>

<% form_tag session_path do -%>
<p><%= label_tag 'email' %>
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag 'password' %>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><label>&nbsp;</label>
<%= submit_tag 'Log in' %></p>
<% end -%>

<img src="/images/openid.png">
<a href="/openid?openid_identifier=https://www.google.com/accounts/o8/id">Sign with Google</a><br/>

<strong><%= flash[:error] %></strong>

